<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="qreply">
  
  <select id = "reply_list"  resultType="kh.spring.dto.QreplyDTO">
  	select * from question_reply where parentseq = #{seq}
  </select>
  
  <insert id = "reply_insert">
    insert into question_reply values(reply_seq.nextval, parentseq, #{contents}, #{writer}, sysdate)
  </insert>
 
  </mapper>